@model RegisterViewModel
@{
    ViewData["Title"] = "Register";
    Layout = "~/Views/Shared/_AuthLayout.cshtml";
}
<div asp-validation-summary="All" class="text-danger"></div>

<div class="main-agileinfo">
	<div class="agileits-top">
		<form asp-action="Register">
			<span class="text-white" >FirstName</span>
			<input class="text" asp-for="FName" placeholder="Your First Name">
			<br />
			<span>LastName</span>
			<input class="text" asp-for="LName" placeholder="Your Last Name">
			<br />
			<span>Email</span>
			<input class="text" asp-for="Email" placeholder="Email">
			<br />
			<span>Password</span>
			<input class="text" asp-for="Password" placeholder="Password">
			<br />
			<span>ConfirmPassword</span>
			<input class="text" asp-for="ConfirmPassword" placeholder="ConfirmPassword">
			<br />

			<div class="wthree-text">
				<label class="anim">
					<input asp-for="IsAgree" class="checkbox" >
					<span>I Agree To The Terms & Conditions</span>
				</label>
				<div class="clear"> </div>
			</div>
			<input type="submit" value="SIGNUP">
		</form>
		<p>Do You have an Account? <a asp-action="Login"> Login Now!</a></p>
	</div>
</div>


			@section ValidationScriptSection{
	<partial name="_ValidationScriptsPartial" />
			}