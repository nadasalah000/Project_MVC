@model IEnumerable<RoleViewModel>
@{
    ViewData["Title"] = "Index";
}
<a asp-action="Create" class="btn btn-success">Add New Role</a>
<hr />
@if (Model.Count() > 0)
{
   // <h1>All Roles</h1>
    <div class="mt-5">
        <form asp-action="Index" class="row offset-2">
            <div class="col-8">
                <input class="form-control" type="text" name="SearchValue" placeholder="Role's Name" />
            </div>
            <div class="col-4">
                <input class="btn-lg btn-success" type="submit" name="Search" />
            </div>
        </form>
    </div>

    <table class="table table-striped table-hover mt-5">
        <thead>
            <tr>
                <td>@Html.DisplayNameFor(U => U.Id)</td>
                <td>@Html.DisplayNameFor(U => U.RoleName)</td>
                <td>Details</td>
                <td>Update</td>
                <td>Delete</td>
            </tr>
        </thead>
        <tbody>
            @foreach (var Role in Model)
            {
                <tr>
                    <td>@Role.Id</td>
                    <td>@Role.RoleName</td>
                    <partial name="_ButtonPartialView" model="@Role.Id" />
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div>
        <h1>Ther Is No Roles</h1>
    </div>
}